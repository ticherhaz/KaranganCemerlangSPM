<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint"></item>

        <item name="android:itemTextAppearance">@style/menuTextColor</item>]

        <item name="android:actionMenuTextColor"></item>

    </style>

    <style name="styleCardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="styleCardViewRight">
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
        <item name="cardCornerRadius">11dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="styleSpinner" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColorHighlight">@color/colorTextWhite</item>
        <item name="android:textColorPrimary">@color/colorTextWhite</item>
        <item name="android:textColor">@color/colorTextWhite</item>
    </style>

    <style name="AppNightTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>

        <!-- yang ni crucial part, walaupun nampak duplicate dgn yg app theme pertama tu, tapi dak, ini penting jugak , kena initialize untuk night jugak -->
        <item name="android:textColorHint"></item>

        <item name="android:itemTextAppearance">@style/menuTextColor</item>

        <item name="android:actionMenuTextColor"></item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- This part for the app bar -->
    <style name="menuTextColor" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor"></item>
    </style>

    <style name="menuTextColorA" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimary" tools:ignore="NewApi">?attr/colorPrimary</item>
        <item name="android:colorPrimaryDark" tools:ignore="NewApi">?attr/colorPrimaryDark</item>
    </style>

    <style name="editTextColorText" parent="@android:style/TextAppearance">
        <item name="android:textColor"></item>
    </style>

</resources>