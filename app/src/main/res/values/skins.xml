<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="skin_attr">
        <attr name="colorPrimarySoft" format="color|reference" />
        <attr name="colorPrimary" format="color|reference" />
        <attr name="colorPrimaryDark" format="color|reference" />
        <attr name="colorAccent" format="color|reference" />
        <attr name="colorBackground" format="color|reference" />
        <attr name="colorBackgroundRecyclerView" format="color|reference" />
        <attr name="colorButtonText" format="color|reference" />
        <attr name="colorText" format="color|reference" />
        <attr name="colorLine" format="color|reference" />
    </declare-styleable>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimarySoft">@color/colorPrimarySoft</item>
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorBackgroundRecyclerView">@color/colorBackgroundRecyclerView</item>
        <item name="colorButtonText">@color/colorButtonText</item>
        <item name="colorText">@color/colorText</item>
        <item name="colorLine">@color/colorLine</item>

        <item name="android:itemBackground">?attr/colorBackgroundRecyclerView</item>
        <item name="android:itemTextAppearance">@style/menuTextColor</item>

    </style>

    <style name="AppNightTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="colorPrimarySoft">@color/colorPrimarySoftNight</item>
        <item name="colorBackground">@color/colorBackgroundNight</item>
        <item name="colorBackgroundRecyclerView">@color/colorBackgroundRecyclerViewNight</item>
        <item name="colorButtonText">@color/colorButtonTextNight</item>
        <item name="colorText">@color/colorTextNight</item>
        <item name="colorLine">@color/colorLineNight</item>

    </style>

    <!-- This part for the app bar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="menuTextColor" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">?attr/colorText</item>
    </style>

    <style name="menuTextColorA" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimary" tools:ignore="NewApi">?attr/colorPrimary</item>
        <item name="android:colorPrimaryDark" tools:ignore="NewApi">?attr/colorPrimaryDark</item>
    </style>
</resources>