<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_online_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="7dp"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_sign_online"
                    android:drawableLeft="@drawable/ic_sign_online"
                    android:focusable="true"
                    android:textColor="?attr/colorText" />

                <TextView
                    android:id="@+id/tv_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="7dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="?attr/colorText" />

                <TextView
                    android:id="@+id/tv_last_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="7dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="?attr/colorText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="210dp"
                        android:layout_height="210dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/emblem" />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/tv_title_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />


            <TextView
                android:id="@+id/tv_custom_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/tv_sekolah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/tv_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/tv_created_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/tv_post_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/tv_reputation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/tv_reputation_power"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>