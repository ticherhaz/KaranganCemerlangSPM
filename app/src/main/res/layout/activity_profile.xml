<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_profile"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/emblem" />

            <TextView
                android:id="@+id/text_view_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/text_view_sekolah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/text_view_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/text_view_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/text_view_title_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/text_view_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/text_view_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/text_view_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/text_view_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/text_view_post_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/text_view_reputation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/text_view_reputation_power"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

            <TextView
                android:id="@+id/text_view_last_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/text_view_shape"
                android:clickable="true"
                android:focusable="true"
                android:padding="15dp"
                android:textColor="?attr/colorText" />

        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>