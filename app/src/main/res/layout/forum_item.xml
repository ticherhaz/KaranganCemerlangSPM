<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/styleCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_forum_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="?attr/colorText"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_forum_user_viewing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="?attr/colorText"
                android:textStyle="italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_view_forum_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textColor="?attr/colorText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_forum_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_viewer"
                android:drawableLeft="@drawable/ic_viewer"
                android:gravity="center_vertical"
                android:text="@string/kosong"
                android:textColor="?attr/colorText"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_threads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorText"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/text_view_posts_thread_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="?attr/colorText"
                android:textSize="12sp"
                android:textStyle="italic" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_view_last_thread_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorText" />

        <TextView
            android:id="@+id/text_view_last_thread_by_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorText"
            android:textSize="12sp"
            android:textStyle="italic" />
    </LinearLayout>
</android.support.v7.widget.CardView>