<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_umum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/umum"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_user_viewing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="@string/_0_viewing"
                android:textStyle="italic" />

        </LinearLayout>


        <TextView
            android:id="@+id/text_view_deskripsi_forum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="@string/description" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_viewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_viewer"
                android:drawableLeft="@drawable/ic_viewer"
                android:gravity="center_vertical"
                android:text="@string/views"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_view_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawableStart="@drawable/ic_favourite"
                android:drawableLeft="@drawable/ic_favourite"
                android:gravity="center_vertical"
                android:text="@string/fav"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_threads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/threads"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/text_view_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/posts"
                android:textSize="12sp"
                android:textStyle="italic" />


        </RelativeLayout>

        <TextView
            android:id="@+id/text_view_last_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/last_thread" />

        <TextView
            android:id="@+id/text_view_last_thread_by_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/by_user"
            android:textStyle="italic" />
    </LinearLayout>
</android.support.v7.widget.CardView>